{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoro",
  "version": "0.1.8",
  "identifier": "com.bsjhx.pomodoro",
  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ui && npm install && npm run dev",
    "beforeBuildCommand": "cd ui && npm install && npm run build",
    "frontendDist": "../ui/build"
  },
  "app": {
    "windows": [
      {
        "title": "Pomodoro",
        "width": 800,
        "height": 600
      }
    ],
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns"
    ]
  }
}